<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.papas000.filterio.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="mainphoto"
            android:scaleType="centerCrop" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="choosePhoto"
            android:text="Choose Photo" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applyGrayscale"
            android:text="Grayscale" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applySepia"
            android:text="Sepia" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applyBlur"
            android:text="Blur" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applyToon"
            android:text="Toon" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applySketch"
            android:text="Sketch" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applyInvert"
            android:text="Invert" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applyPixelation"
            android:text="Pixelation" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applySwirl"
            android:text="Swirl" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="applyVignette"
            android:text="Vignette" />
    </LinearLayout>
</ScrollView>